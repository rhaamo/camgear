{% extends "layout.jinja2" %}
{% import "bootstrap/wtf.html" as wtf %}

{% block content %}
<div class="row">
    <div class="row">
        <div class="col-lg-6">
            <h3>{{ gettext("Edit profile: %(username)s", username=current_user.username()) }}</h3>
        </div>
    </div>

    <form action="{{ url_for('bp_users.edit') }}" method="POST" class="form-horizontal">
        {{ form.hidden_tag() }}
        {{ wtf.form_errors(form, hiddens=True) }}

        <div class="row">
            <div class="col-lg-6">
                {{ wtf.form_field(form.display_name, 'horizontal') }}
                {{ wtf.form_field(form.timezone, 'horizontal') }}
                {{ wtf.form_field(form.locale, 'horizontal') }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {{ wtf.form_field(form.submit, button_map={'submit': 'success'}) }}
                <a class="btn btn-warning" href="{{ url_for('bp_users.profile', name=user.name) }}">{{ gettext("Cancel edit") }}</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
